{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "debug on",
			"type": "shell",
			"command": "cmake",
			"group": "build",
			"args": [
				"..",
				"-DACE_DEBUG=ON",
				"-DGAME_DEBUG=ON"
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"problemMatcher": []
		},
		{
			"label": "debug off",
			"type": "shell",
			"command": "cmake",
			"group": "build",
			"args": [
				"..",
				"-DACE_DEBUG=OFF",
				"-DGAME_DEBUG=OFF"
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"problemMatcher": []
		},
		{
			"label": "release",
			"group": "build",
			"command": "release.bat"
		}
	]
}
